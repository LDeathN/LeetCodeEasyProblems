#First Problem
class Solution(object):
    def largeGroupPositions(self, s):
        result = []
        n = len(s)
        i = 0
        
        while i < n:
            start = i
            while i < n - 1 and s[i] == s[i + 1]:
                i += 1
            if i - start + 1 >= 3:
                result.append([start, i])
            i += 1
        
        return result



#Second Problem
class Solution(object):
    def flipAndInvertImage(self, image):
        for row in image:
            row.reverse()

            for i in range(len(row)):
                row[i] = 1 - row[i]
        return image




