#First Problem
class Solution(object):
    def findFinalValue(self, nums, original):
        while True:
            if original in nums:
                original *= 2
            else:
                break

        return original



#Second Problem
class Solution(object):
    def minimumSum(self, num):
        num = sorted(str(num))
        total = 0
        while num:
            current = ""
            current += num.pop(0)
            current += num.pop()
            current = int(current)
            total += current
        
        return total




