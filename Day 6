#First Problem
class Solution(object):
    def hasPathSum(self, root, targetSum):
        
        def dfs(node, cur_sum):
            if not node:
                return False
            
            cur_sum += node.val

            if not node.left and not node.right:
                return cur_sum == targetSum

            return (dfs(node.left, cur_sum) or dfs(node.right, cur_sum))  

        return dfs(root, 0)  


