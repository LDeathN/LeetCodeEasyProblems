#First Problem
class Solution(object):
    def findRotation(self, mat, target):
        def rotate_90(mat):
            n = len(mat)
            transposed = [[mat[j][i] for j in range(n)] for i in range(n)]
            for row in transposed:
                row.reverse()
            return transposed

        if mat == target:
            return True
        for _ in range(3):
            mat = rotate_90(mat)
            if mat == target:
                return True
        return False




