#First  Problem
SELECT id, movie, description, rating
FROM Cinema
WHERE id % 2 = 1
  AND description != 'boring'
ORDER BY rating DESC;



#Second Problem
UPDATE Salary
SET sex = CASE 
             WHEN sex = 'm' THEN 'f'
             WHEN sex = 'f' THEN 'm'
          END;



#Third Problem
class Solution(object):
    def maximumProduct(self, nums):
        nums.sort()
        return max(nums[-1] * nums[-2] * nums[-3], nums[0] * nums[1] * nums[-1])



#Fourth Problem
from collections import deque

class Solution(object):
    def averageOfLevels(self, root):
        s = defaultdict(float)
        t = defaultdict(int)

        def dfs(node, h):
            if not node: return
            dfs(node.left, h+1)
            dfs(node.right, h+1)
            s[h] += node.val
            t[h] += 1
        
        dfs(root, 0)

        output = []
        for i in range(len(s)):
            output.append(s[i]/t[i])
        return output




