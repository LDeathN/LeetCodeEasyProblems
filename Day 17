#First Problem
class Solution(object):
    def wordPattern(self, pattern, s):
        char_to_word = {}
        word_to_char = {}
        s = s.split(" ")
        
        if len(pattern) != len(s):
            return False

        for i, j in zip(pattern, s):
            if i in char_to_word and char_to_word[i] != j:
                return False
            if j in word_to_char and word_to_char[j] != i:
                return False
            char_to_word[i] = j
            word_to_char[j] = i
        return True




