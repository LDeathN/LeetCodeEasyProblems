#First Problem
class Solution(object):
    def findSpecialInteger(self, arr):
        counted = {}
        condition = len(arr) // 4

        for num in arr:
            if num not in counted:
                counted[num] = 0
            counted[num] += 1
        
        for key, value in counted.items():
            if value > condition:
                return key



#Second Problem
class Solution(object):
    def getDecimalValue(self, head):
        result = 0
        current = head
        while current:
            result = (result << 1) | current.val
            current = current.next
        return result



#Third Problem
class Solution(object):
    def findNumbers(self, nums):
        result = 0
        for num in nums:
            if len(str(num)) % 2 == 0:
                result += 1
        
        return result




