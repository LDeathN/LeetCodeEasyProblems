#First Problem
class Solution(object):
    def findLHS(self, nums):
        count = {}

        for num in nums:
            count[num] = count.get(num, 0) + 1
        
        max_length = 0

        for num in count:
            if num + 1 in count:
                max_length = max(max_length, count[num] + count[num + 1])
        
        return max_length



#Second Problem
SELECT name, population, area
FROM World
WHERE area >= 3000000
   OR population >= 25000000;



#Third Problem
SELECT class
FROM Courses
GROUP BY class
HAVING COUNT(student) >= 5;



#Fourth Problem
class Solution(object):
    def maxCount(self, m, n, ops):
        if not ops:
            return m * n
        
        min_a = m
        min_b = n
        
        for a, b in ops:
            min_a = min(min_a, a)
            min_b = min(min_b, b)
        
        return min_a * min_b




