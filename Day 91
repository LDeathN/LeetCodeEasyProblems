#First Problem
class Solution(object):
    def maxDistance(self, colors):
        n = len(colors)
        max_distance = 0

        for i in range(n):
            if colors[i] != colors[n - 1]:
                max_distance = max(max_distance, n - 1 - i)

        for i in range(n - 1, -1, -1):
            if colors[i] != colors[0]:
                max_distance = max(max_distance, i)
        
        return max_distance




