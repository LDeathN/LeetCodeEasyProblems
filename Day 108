#First Problem (2500)
class Solution(object):
    def deleteGreatestValue(self, grid):
        total = 0
        while grid[0]:
            current = []
            for i in range(len(grid)):
                current.append(max(grid[i]))
                grid[i].remove(max(grid[i]))
            total += max(current)

        return total



#Second Problem (2506)
class Solution(object):
    def similarPairs(self, words):
        count = 0
        n = len(words)

        char_sets = [set(word) for word in words]

        for i in range(n):
            for j in range(i + 1, n):
                if char_sets[i] == char_sets[j]:
                    count += 1
        
        return count



#Third Problem (2511)
class Solution(object):
    def captureForts(self, forts):
        max_captures = 0
        n = len(forts)
        
        for i in range(n):
            if forts[i] == 1:
                count = 0
                for j in range(i + 1, n):
                    if forts[j] == 0:
                        count += 1
                    elif forts[j] == -1:
                        max_captures = max(max_captures, count)
                        break
                    else:
                        break

                count = 0
                for j in range(i - 1, -1, -1):
                    if forts[j] == 0:
                        count += 1
                    elif forts[j] == -1:
                        max_captures = max(max_captures, count)
                        break
                    else:  
                        break
                        
        return max_captures




