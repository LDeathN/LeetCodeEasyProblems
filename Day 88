#First Problem
class Solution(object):
    def reversePrefix(self, word, ch):
        index = word.find(ch)

        if index != -1:
            return word[:index + 1][::-1] + word[index + 1:]

        return word



#Second Problem
class Solution(object):
    def countKDifference(self, nums, k):
        count = 0
        for i in range(len(nums) - 1):
            for j in range(i, len(nums)):
                if abs(nums[i] - nums[j]) == k:
                    count += 1
        
        return count




