#First Problem (2665)
var createCounter = function(init) {
    let currentValue = init;

    return {
        increment: () => ++currentValue,
        decrement: () => --currentValue,
        reset: () => (currentValue = init)
    };
};



#Second Problem (2666)
var once = function(fn) {
    let called = false;
    let result;
    return function(...args){
        if (!called) {
            called = true;
            result = fn(...args);
            return result;
        }
        return undefined;
    }
};



#Third Problem (2667)
var createHelloWorld = function() {
    
    return function(...args) {
        return "Hello World";
    }
};




