#First Problem
class Solution(object):
    def projectionArea(self, grid):
        n = len(grid)
    
        xy_area = 0
        yz_area = 0
        zx_area = 0
        
        for i in range(n):
            max_in_row = 0
            max_in_col = 0
            for j in range(n):
                if grid[i][j] > 0:
                    xy_area += 1
                max_in_row = max(max_in_row, grid[i][j])
                max_in_col = max(max_in_col, grid[j][i])
            
            zx_area += max_in_row
            yz_area += max_in_col
        
        return xy_area + yz_area + zx_area



#Second Problem
class Solution(object):
    def uncommonFromSentences(self, s1, s2):
        s1 = s1.split(" ")
        s2 = s2.split(" ")
        words_count = {}
        result = []

        for word in s1:
            if word not in words_count:
                words_count[word] = 0
            words_count[word] += 1
        
        for word in s2:
            if word not in words_count:
                words_count[word] = 0
            words_count[word] += 1

        for key, value in words_count.items():
            if value == 1:
                result.append(key)

        return result




