#First Problem
class Solution(object):
    def isPowerOfFour(self, n):
        if n <= 0:
            return False
        
        while n != 1:
            if n % 4 == 0:
                n /= 4
            else:
                return False
        return True



#Second Problem
class Solution(object):
    def reverseString(self, s):
        mid = len(s) // 2

        for i in range(mid):
            temp = s[i]
            s[i] = s[-(i + 1)]
            s[-(i + 1)] = temp
        return s




