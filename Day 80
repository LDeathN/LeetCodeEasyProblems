#First Problem
class Solution(object):
    def squareIsWhite(self, coordinates):
        letter = coordinates[0]
        number = int(coordinates[1])
        if ord(letter) % 2 == 0:
            if number % 2 == 0:
                return False
            return True
        else:
            if number % 2 == 0:
                return True
            return False



#Second Problem
class Solution(object):
    def truncateSentence(self, s, k):
        s = s.split(" ")
        result = []
        for i in range(k):
            result.append(s[i])
        
        return " ".join(result)



#Third Problem
class Solution(object):
    def arraySign(self, nums):
        count = 0
        if 0 in nums:
            return 0

        for num in nums:
            if num < 0:
                count += 1
        
        if count % 2 == 0:
            return 1
        return -1



#Fourth Problem
class Solution(object):
    def minOperations(self, nums):
        operations = 0

        for i in range(1, len(nums)):
            if nums[i] <= nums[i - 1]:
                increment = nums[i - 1] - nums[i] + 1
                nums[i] += increment
                operations += increment
        
        return operations




