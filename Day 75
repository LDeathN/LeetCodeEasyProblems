#First Problem
class Solution(object):
    def totalMoney(self, n):
        total = 0
        count = 0
        for i in range(1, n + 1):
            total += i - count
            if i % 7 == 0:
                count += 6
        
        return total



#Second Problem
class Solution(object):
    def decode(self, encoded, first):
        n = len(encoded) + 1
        arr = [0] * n
        arr[0] = first
        
        for i in range(1, n):
            arr[i] = encoded[i - 1] ^ arr[i - 1]
        
        return arr




