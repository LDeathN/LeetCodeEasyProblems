#First Problem
class Solution(object):
    def countNegatives(self, grid):
        count = 0
        for x in grid:
            for y in x:
                if y < 0:
                    count += 1
        
        return count



#Second Problem
class Solution(object):
    def sortByBits(self, arr):
        def sort_key(x):
            return (bin(x).count('1'), x)

        arr.sort(key=sort_key)
        
        return arr




