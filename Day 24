#First Problem
class Solution(object):
    def findWords(self, words):
        keyboard = ["qwertyuiop", "asdfghjkl", "zxcvbnm"]
        result = []
        for word in words:
            current = []
            for letter in word:
                if letter.lower() in keyboard[0]:
                    current.append(0)
                elif letter.lower() in keyboard[1]:
                    current.append(1)
                else:
                    current.append(2)
            if len(set(current)) == 1:
                result.append(word)
        
        return result




