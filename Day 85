#First Problem
class Solution(object):
    def canBeTypedWords(self, text, brokenLetters):
        text = text.split(" ")
        result = len(text)

        for word in text:
            for letter in brokenLetters:
                if letter in word:
                    result -= 1
                    break
        
        return result



#Second Problem
class Solution(object):
    def areOccurrencesEqual(self, s):
        occur = {}
        for element in s:
            if element not in occur:
                occur[element] = 0
            occur[element] += 1
        
        count = occur[s[0]]
        for value in occur.values():
            if count != value:
                return False
        return True



#Third Problem
class Solution(object):
    def getLucky(self, s, k):
        number = ""
        for i in range(len(s)):
            number += str(ord(s[i]) - 96)
            
        for i in range(k):
            new = 0
            for digit in str(number):
                new += int(digit)
            number = new
        
        return number




